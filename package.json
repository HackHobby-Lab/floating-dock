{
  "name": "dockly",
  "version": "1.0.0",
  "description": "A floating dock for quick access to links",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win portable"
  },
  "keywords": ["docker", "dock", "links", "electron", "floating dock", "quick access", "productivity", "utility", "desktop app", "cross-platform", "portable", "customizable", "user-friendly", "open source", "lightweight", "modern", "responsive", "dock application", "taskbar", "launcher", "shortcut", "accessibility", "navigation", "tools", "applications", "links manager" , "dock manager", "system tray", "floating window", "task management", "productivity tool", "desktop utility"],
  "author": "Hamza Awan",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.awan.floatingdock",
    "productName": "Dockly",
    "artifactName": "Dockly.${ext}",
    "asar": true,
    "files": [
      "**/*",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    }
  }
}
